<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      <th>
    </tr>
  </thead>


 <tbody>
   <% @books.each do |book| %>

    <tr>

      <td><%= book.title %></td>
      <td><%=book.body%></td>

      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><span><%= link_to "Desstory", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></span></td>
    </tr>
    <% end %>
  </tbody>
</table>

   <h2>NEW BOOK</h2>
   <% if @book.errors.any? %>

    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>
<!-- form_for部分 -->
   <%= form_for @book, url: books_path do |f| %>

   <h4>Title</h4>

   <%= f.text_field :title %>

   <h4>Body</h4>

   <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>

<% end %>